<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<VBox prefWidth="300.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="bg.tusofia.controllers.layout.TypedefController">

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <HBox prefHeight="30.0" spacing="10.0">
        <Text text="*"/>
        <Text text="Typename :"/>
        <TextField fx:id="typeName"/>
        <Text text="[!]"/>

    </HBox>
    <HBox fx:id="previewGroup" prefHeight="30.0">
        <Text text="[TYPEDEF PREVIEW]" fx:id="preview">
            <HBox.margin>
                <Insets left="25.0"/>
            </HBox.margin>
        </Text>
        <Button fx:id="previewEdit" text="Modify">
            <HBox.margin>
                <Insets left="10.0" right="10.0"/>
            </HBox.margin>
        </Button>
        <Button fx:id="previewDelete" text="Delete"/>

    </HBox>
    <GridPane fx:id="buttonsGroup" alignment="CENTER" hgap="5.0" vgap="5.0">
        <columnConstraints>
            <ColumnConstraints minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0"/>
        </rowConstraints>
        <Button onAction="#addSimpleItem" prefHeight="70.0" prefWidth="120.0" text="Simple Item"
                GridPane.halignment="RIGHT" GridPane.valignment="CENTER"/>
        <Button onAction="#addStructure" prefHeight="70.0" prefWidth="120.0" text="Structure"
                GridPane.halignment="RIGHT" GridPane.rowIndex="1" GridPane.valignment="CENTER"/>
        <Button onAction="#addArray" prefHeight="70.0" prefWidth="120.0" text="Array" GridPane.columnIndex="1"
                GridPane.halignment="LEFT" GridPane.valignment="CENTER"/>
        <Button onAction="#addLiteral" prefHeight="70.0" prefWidth="120.0" text="Literal" GridPane.columnIndex="1"
                GridPane.halignment="LEFT" GridPane.rowIndex="1" GridPane.valignment="CENTER"/>

    </GridPane>
    <HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0" spacing="20.0">
        <Button alignment="CENTER" onAction="#cancel" prefWidth="60.0" text="Cancel"/>
        <Button alignment="CENTER" onAction="#save" prefWidth="60.0" text="Save"/>

    </HBox>

</VBox>
