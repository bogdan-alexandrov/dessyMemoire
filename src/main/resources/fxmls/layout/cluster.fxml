<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.effect.ImageInput?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox prefWidth="280.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bg.tusofia.controllers.layout.ClusterController">
    <padding>
        <Insets left="25.0" top="25.0" />
    </padding>
    <GridPane>
        <columnConstraints>
            <ColumnConstraints minWidth="10.0" prefWidth="10.0" />
            <ColumnConstraints minWidth="10.0" prefWidth="70.0" />
            <ColumnConstraints minWidth="10.0" prefWidth="150.0" />
            <ColumnConstraints minWidth="10.0" prefWidth="20.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
        <Text text="*" />
        <Text text="*" GridPane.rowIndex="1" />
        <Text text="Name :" GridPane.columnIndex="1" />
        <Text text="URL :" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <TextField fx:id="name" prefWidth="150.0" GridPane.columnIndex="2" />
        <Text text="*" GridPane.rowIndex="2" />
        <Text text="Structure :" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <TextField fx:id="url" prefWidth="150.0" GridPane.columnIndex="2" GridPane.rowIndex="1" />
        <Button fx:id="addStructure" onAction="#addStructure" text="Add" GridPane.columnIndex="1" GridPane.rowIndex="3">
            <GridPane.margin>
                <Insets left="10.0" />
            </GridPane.margin>
        </Button>
        <HBox fx:id="structurePreviewHBox" prefHeight="30.0" spacing="10.0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="3">
            <Text fx:id="structurePreview" text="[PREVIEW]">
                <HBox.margin>
                    <Insets left="10.0" />
                </HBox.margin>
            </Text>
            <Button fx:id="editStructure" maxWidth="50.0" onAction="#editStructure" text="Edit" />
            <Button fx:id="deleteStructure" maxWidth="80.0" onAction="#deleteStructure" text="Delete" />
        </HBox>

        <ScrollPane maxHeight="15.0" maxWidth="15.0" minHeight="15.0" minWidth="15.0" prefHeight="15.0" prefWidth="15.0" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.valignment="CENTER">
            <tooltip>
                <Tooltip text="%cluster.name" />
            </tooltip>
            <effect>
                <ImageInput>
                    <source>
                        <Image url="@../../img/info_icon.png" />
                    </source>
                </ImageInput>
            </effect>
        </ScrollPane>
        <ScrollPane maxHeight="15.0" maxWidth="15.0" minHeight="15.0" minWidth="15.0" prefHeight="15.0" prefWidth="15.0" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
            <tooltip>
                <Tooltip text="%cluster.url" />
            </tooltip>
            <effect>
                <ImageInput>
                    <source>
                        <Image url="@../../img/info_icon.png" />
                    </source>
                </ImageInput>
            </effect>
        </ScrollPane>
        <ScrollPane maxHeight="15.0" maxWidth="15.0" minHeight="15.0" minWidth="15.0" prefHeight="15.0" prefWidth="15.0" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
            <tooltip>
                <Tooltip text="%cluster.structure" />
            </tooltip>
            <effect>
                <ImageInput>
                    <source>
                        <Image url="@../../img/info_icon.png" />
                    </source>
                </ImageInput>
            </effect>
        </ScrollPane>
    </GridPane>
    <HBox prefHeight="80.0" spacing="10.0">
        <Button onAction="#cancel" prefWidth="60.0" text="Cancel" />
        <Button onAction="#save" prefWidth="60.0" text="Save" />
        <padding>
            <Insets left="50.0" top="30.0" />
        </padding>
    </HBox>
</VBox>
