<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox prefWidth="220.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="bg.tusofia.controllers.layout.IndexController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <GridPane>
        <columnConstraints>
            <ColumnConstraints minWidth="10.0" prefWidth="10.0"/>
            <ColumnConstraints maxWidth="50.0" minWidth="10.0" prefWidth="20.0"/>
            <ColumnConstraints maxWidth="130.0" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>

        <Text text="*"/>
        <Text text="Type :" GridPane.columnIndex="1"/>
        <TextField fx:id="type" GridPane.columnIndex="2"/>
        <Text text="First :" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Text text="Last :" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Text text="Step :" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <TextField fx:id="first" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <TextField fx:id="last" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
        <TextField fx:id="step" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
        <Text text="*" GridPane.rowIndex="1"/>
        <Text text="*" GridPane.rowIndex="2"/>
    </GridPane>
    <HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0" spacing="20.0">
        <Button alignment="CENTER" onAction="#cancel" prefWidth="60.0" text="Cancel"/>
        <Button alignment="CENTER" onAction="#save" prefWidth="60.0" text="Save"/>
    </HBox>
</VBox>
