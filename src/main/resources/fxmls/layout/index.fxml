<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="bg.tusofia.controllers.layout.IndexController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <GridPane vgap="5">
        <Text text="*"/>
        <Text text="Type :" GridPane.columnIndex="1"/>
        <Text text="First :" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Text text="Last :" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Text text="Step :" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <ChoiceBox fx:id="type" GridPane.columnIndex="2" value="int_8"/>
        <TextField fx:id="first" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <TextField fx:id="last" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
        <TextField fx:id="step" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
        <Text text="*" GridPane.rowIndex="1"/>
        <Text text="*" GridPane.rowIndex="2"/>
        <columnConstraints>
            <ColumnConstraints/>
            <ColumnConstraints prefWidth="40.0"/>
            <ColumnConstraints/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
        </rowConstraints>
    </GridPane>
    <HBox alignment="CENTER" prefHeight="40.0" prefWidth="200.0" spacing="20.0">
        <Button alignment="CENTER" onAction="#cancel" prefWidth="60.0" text="Cancel"/>
        <Button alignment="CENTER" onAction="#save" prefWidth="60.0" text="Save"/>
    </HBox>
</VBox>
