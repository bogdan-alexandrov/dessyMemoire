<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="bg.tusofia.controllers.layout.IndexController">
    <padding>
        <Insets left="25.0" top="25.0"/>
    </padding>
    <GridPane vgap="5">
        <Text text="*"/>
        <Text text="Type :" GridPane.columnIndex="1"/>
        <Text text="First :" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Text text="Last :" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Text text="Step :" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <ChoiceBox fx:id="type" value="int_8" GridPane.columnIndex="2"/>
        <TextField fx:id="first" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
        <TextField fx:id="last" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
        <TextField fx:id="step" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
        <Text text="*" GridPane.rowIndex="1"/>
        <Text text="*" GridPane.rowIndex="2"/>
        <columnConstraints>
            <ColumnConstraints/>
            <ColumnConstraints prefWidth="40.0"/>
            <ColumnConstraints/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
        </rowConstraints>
    </GridPane>
    <HBox prefHeight="80.0" spacing="10.0">
        <Button onAction="#cancel" prefWidth="60.0" text="Cancel"/>
        <Button onAction="#save" prefWidth="60.0" text="Save"/>
        <padding>
            <Insets left="45.0" top="20.0"/>
        </padding>
        <VBox.margin>
            <Insets/>
        </VBox.margin>
    </HBox>
</VBox>
