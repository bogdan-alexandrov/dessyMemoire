<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<VBox prefHeight="400.0" prefWidth="340.0" spacing="5.0" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="bg.tusofia.controllers.general.SourceController">
    <padding>
        <Insets left="10.0" top="10.0"/>
    </padding>
    <HBox prefWidth="220.0">
        <GridPane vgap="5.0">
            <columnConstraints>
                <ColumnConstraints minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints minWidth="10.0" prefWidth="200.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints prefHeight="30.0"/>
                <RowConstraints prefHeight="30.0"/>
                <RowConstraints prefHeight="30.0"/>
                <RowConstraints prefHeight="170.0"/>
            </rowConstraints>
            <HBox.margin>
                <Insets left="10.0" top="10.0"/>
            </HBox.margin>
            <Text text="* Timestamp :">
                <GridPane.margin>
                    <Insets left="-8.0"/>
                </GridPane.margin>
            </Text>
            <HBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="5.0" GridPane.columnIndex="1">
                <DatePicker fx:id="datePicker" prefWidth="120.0"/>
                <TextField fx:id="hourField" prefWidth="40.0" promptText="hh"/>
                <Text text=":"/>
                <TextField fx:id="minField" prefWidth="42.0" promptText="mm"/>
            </HBox>
            <Text text="Method :" GridPane.rowIndex="1"/>
            <HBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="5.0" GridPane.columnIndex="1"
                  GridPane.rowIndex="1">
                <Button fx:id="addMethod" text="Add"/>
                <Button fx:id="modMethod" text="Modify"/>
                <Button fx:id="delMethod" text="Delete"/>
            </HBox>
            <Text text="Parent :" GridPane.rowIndex="2"/>
            <HBox alignment="CENTER_LEFT" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <Button fx:id="addParent" text="Add"/>
                <Button fx:id="modParent" text="Modify"/>
                <Button fx:id="delParent" text="Delete"/>
            </HBox>
            <Text text="Children :" GridPane.rowIndex="3" GridPane.valignment="TOP"/>
            <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0" GridPane.columnIndex="1"
                  GridPane.rowIndex="3">
                <TableView fx:id="table" prefHeight="400.0" prefWidth="200.0" />
                <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
                    <Button onAction="#addChildClicked" text="Add"/>
                    <Button onAction="#modifyChildClicked" fx:id="modifyChildButton" text="Modify"/>
                    <Button onAction="#deleteChildClicked" fx:id="deleteChildButton" text="Delete"/>
                </HBox>
            </VBox>
        </GridPane>
    </HBox>
    <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
        <Button onAction="#cancel" prefWidth="60.0" text="Cancel"/>
        <Button onAction="#save" prefWidth="60.0" text="Save"/>
    </HBox>
</VBox>
